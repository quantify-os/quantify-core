          
  start:  move   4,R0    #Waveform count register  
                                                   
          play   0,1,4   #Play square_id           
                                                   
          play   2,3,4   #Play drag_ID             
          wait   8       #Wait                     
                                                   
          play   0,1,4   #Play square_id           
          jmp    @start  #Loop back to start       
